{
  "name": "system4",
  "publisher": "kichikuou",
  "displayName": "System 4",
  "description": "Language support for AliceSoft's System 4 language",
  "homepage": "https://github.com/kichikuou/vscode-system4",
  "repository": {
    "type": "git",
    "url": "https://github.com/kichikuou/vscode-system4.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kichikuou/vscode-system4/issues",
    "email": "KichikuouChrome@gmail.com"
  },
  "icon": "images/icon.png",
  "version": "0.1.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:*.jaf",
    "workspaceContains:System40.ini",
    "workspaceContains:AliceStart.ini",
    "onLanguage:system4"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "system4",
        "extensions": [
          ".jaf",
          ".JAF"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "system4",
        "scopeName": "source.system4",
        "path": "./syntaxes/system4.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "System4",
      "properties": {
        "system4.sys4langPath": {
          "type": "string",
          "description": "Directory containing sys4c, sys4dc, and sys4lang executables."
        },
        "system4.xsystem4Path": {
          "type": "string",
          "description": "Specifies the path to xsystem4 executable."
        },
        "system4.decompilerPath": {
          "type": "string",
          "description": "The path to AinDecompiler executable. (deprecated)"
        }
      }
    },
    "commands": [
      {
        "command": "system4.decompile",
        "category": "System4",
        "title": "Decompile"
      },
      {
        "command": "system4.server.restart",
        "category": "System4",
        "title": "Restart Language Server"
      }
    ],
    "taskDefinitions": [
      {
        "type": "system4-decompile"
      },
      {
        "type": "system4-compile"
      },
      {
        "type": "system4-aindecompiler-compile"
      }
    ],
    "problemMatchers": [
      {
        "name": "sys4c",
        "owner": "system4",
        "fileLocation": [
          "autoDetect",
          "${workspaceFolder}/src"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+)-(\\d+): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "endColumn": 4,
          "message": 5
        }
      }
    ],
    "debuggers": [
      {
        "type": "xsystem4",
        "languages": [
          "system4"
        ],
        "label": "XSystem4",
        "configurationAttributes": {
          "launch": {
            "required": [
              "program",
              "runDir",
              "args"
            ],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the xsystem4 executable file.",
                "default": "${command:GetXsystem4Path}"
              },
              "env": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                },
                "description": "Environment variables defined as a key value pair.",
                "default": {}
              },
              "runDir": {
                "type": "string",
                "description": "Working directory for the xsystem4 process.",
                "default": "${workspaceFolder}"
              },
              "args": {
                "type": "array",
                "description": "Command line arguments passed to the xsystem4 process.",
                "default": [
                  "--debug-api",
                  "${workspaceFolder}"
                ]
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": false
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "xsystem4",
            "request": "launch",
            "name": "Debug",
            "program": "${command:GetXsystem4Path}",
            "args": [
              "--debug-api",
              "${workspaceFolder}"
            ]
          }
        ],
        "configurationSnippets": [
          {
            "label": "XSystem4: Debug",
            "description": "A new configuration for debugging a System 4 project using xsystem4.",
            "body": {
              "type": "xsystem4",
              "request": "launch",
              "name": "Debug",
              "program": "^\"\\${command:GetXsystem4Path}\"",
              "args": "^[\"--debug-api\", \"\\${workspaceFolder}\"]"
            }
          }
        ],
        "variables": {
          "GetXsystem4Path": "system4.getXsystem4Path"
        }
      }
    ],
    "breakpoints": [
      {
        "language": "system4"
      }
    ]
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node --minify --sourcemap",
    "test": "cd src && tsc"
  },
  "dependencies": {
    "@types/node": "16.x",
    "@types/vscode": "1.74.0",
    "esbuild": "^0.25.9",
    "fflate": "^0.8.2",
    "typescript": "5.5.x",
    "vscode-languageclient": "^8.1.0"
  },
  "private": true
}
