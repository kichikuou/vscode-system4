{
  "name": "system4",
  "publisher": "kichikuou",
  "displayName": "System 4",
  "description": "Language support for AliceSoft's System 4 language",
  "homepage": "https://github.com/kichikuou/vscode-system4",
  "repository": {
    "type": "git",
    "url": "https://github.com/kichikuou/vscode-system4.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kichikuou/vscode-system4/issues",
    "email": "KichikuouChrome@gmail.com"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:system4"
  ],
  "main": "dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "system4",
        "extensions": [
          ".jaf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "system4",
        "scopeName": "source.system4",
        "path": "./syntaxes/system4.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "System4",
      "properties": {
        "system4.lspPath": {
          "type": "string",
          "description": "The path to system4-lsp executable."
        }
      }
    }
  },
  "scripts": {
    "build": "tsc -p src/",
    "watch": "tsc -watch -p src/"
  },
  "dependencies": {
    "@types/node": "^20.8.9",
    "vscode-languageclient": "^8.1.0"
  },
  "private": true,
  "devDependencies": {
    "@types/vscode": "1.67.0",
    "typescript": "^5.2.2"
  }
}
